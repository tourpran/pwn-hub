lvl 4:

def func4(eax):
	if eax <= 1:
		return 1
	p = func4(eax-1)
	q = func4(eax-2)
	return p+q

for i in range(10):
	print(i, func4(i))

lvl 5:
# 6 letter string
# srveaw
# giants
# ebx : input

edx = 0
ecx = 0xffffd0a0
esi = 0x804b220 (isrveawhobpnutfg)

for i in range(6):
	al = l[edx]
	al = al & 0xf
	eax = al
	al = esi[eax]
	l[edx] = al

